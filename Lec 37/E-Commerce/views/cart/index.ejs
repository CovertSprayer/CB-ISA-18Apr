<% layout('layouts/boilerplate') -%>

<section class="container">
    <h1 class="display-6 mb-3">My Cart</h1>
    
    <div class="row">
        <div class="col-lg-8">
            <% for( let item of user.cart ) { %>
                <div class="card mb-3 mx-auto" style="max-width: 640px;">
                    <div class="row g-0">
                    <div class="col-md-4">
                        <img src="<%= item.productId.img %>" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title d-flex justify-content-between align-items-center">
                                <span><%= item.productId.name %></span>
                                <form class="d-inline" action="/user/<%= item.productId._id %>?_method=DELETE" method="post">
                                    <button style="border: none; background: none;"><i class="fa fa-times btn" aria-hidden="true"></i></button>
                                </form>
                            </h5>
                            <p class="card-text"><%= item.productId.desc %></p>
                            <div>
                                <form class="d-inline" action="/user/<%= item.productId._id %>/remove" method="post">
                                    <button class="btn btn-sm bg-primary text-light">-</button>
                                </form>
                                <p class="d-inline"><%= item.quantity %></p>
                                <form class="d-inline" action="/user/<%= item.productId._id %>/add" method="post">
                                    <button class="btn btn-sm bg-primary text-light">+</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            <% } %>
        </div>

        <div class="col-lg-4">
            <ul class="list-group">
                <% for( let item of user.cart ) { %>
                    <li class="list-group-item">
                        <span class="fw-bold"><%= item.productId.name %></span> -
                        <span>$ <%= item.productId.price %></span> x
                        <span><%= item.quantity %></span>
                    </li>
                <% } %>
                    <li class="list-group-item">
                        <span class="fw-bold">Total Amount : $ <%= totalAmount %></span>
                    </li>
            </ul>
            <button class="btn btn-success mt-3 btn-sm">Checkout</button>
        </div>
    </div>
    
</section>