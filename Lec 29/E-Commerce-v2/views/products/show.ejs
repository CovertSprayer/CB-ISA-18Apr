<% layout('layouts/boilerplate') -%>

  <div class="row">
    <div class="col-lg-4 col-sm-12 mx-auto mb-4">
      <div class="card mx-auto" style="width: 20rem;">
        <img src="<%= product.img %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <%= product.name %>
          </h5>
          <h5>$ <%= product.price %>
          </h5>
          <p class="card-text">
            <%= product.desc %>
          </p>
          <a href="#" class="btn btn-primary btn-sm">Buy Now</a>
          <a href="#" class="btn btn-success btn-sm">Add to Cart</a>
          <a href="/products/<%= product._id %>/edit" class="btn btn-info btn-sm">Edit</a>
          <form class="d-inline" action="/products/<%= product.id %>?_method=DELETE" method="post">
            <button class="btn btn-danger btn-sm">Delete</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-4 col-sm-12 mx-auto">
      <h2 class="text-center">Leave Your Review</h2>
      <form class="mb-4" action="/products/<%= product._id %>/review" method="post">
        <div class="mb-2">
          <label for="rating">Rating</label>
          <input class="form-control" name="rating" type="range" id="rating" min="0" max="5">
        </div>

        <div class="mb-2">
          <label for="comment">Description</label>
          <textarea class="form-control" name="comment" id="comment" cols="30" rows="3"></textarea>
        </div>

        <button class="btn btn-sm btn-success">Submit</button>
      </form>

      <div>
        <% for( let review of product.reviews ) { %>
          <div class="card my-2">
            <h5 class="card-header">Rating: <%= review.rating %>
            </h5>
            <div class="card-body">
              <p class="card-text">
                <%= review.comment %>
              </p>
              <a href="#" class="btn btn-sm btn-danger">Delete</a>
            </div>
          </div>
          <% } %>
      </div>

    </div>
  </div>