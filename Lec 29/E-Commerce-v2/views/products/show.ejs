<% layout('layouts/boilerplate') -%>

  <div class="row">
    <div class="col-lg-4 col-sm-12 mx-auto mb-4">
      <div class="card mx-auto" style="width: 20rem;">
        <img src="<%= product.img %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <%= product.name %>
          </h5>
          <h5>$ <%= product.price %>
          </h5>
          <p class="card-text">
            <%= product.desc %>
          </p>
          <a href="#" class="btn btn-primary btn-sm">Buy Now</a>
          <a href="#" class="btn btn-success btn-sm">Add to Cart</a>
          <a href="/products/<%= product._id %>/edit" class="btn btn-info btn-sm">Edit</a>
          <form class="d-inline" action="/products/<%= product.id %>?_method=DELETE" method="post">
            <button class="btn btn-danger btn-sm">Delete</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-4 col-sm-12 mx-auto">
      <h2 class="text-center display-6">Leave Your Review</h2>
      <form class="mb-4" action="/products/<%= product._id %>/review" method="post">
        <div class="mb-2">
          <fieldset class="starability-basic">
            <legend>Rating:</legend>
            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked
              aria-label="No rating." />
            <input type="radio" id="first-rate1" name="rating" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="rating" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="rating" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="rating" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="rating" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          <!-- <label for="rating">Rating</label>
          <input class="form-control" name="rating" type="range" id="rating" min="0" max="5"> -->
        </div>

        <div class="mb-2">
          <label for="comment">Description</label>
          <textarea class="form-control" name="comment" id="comment" cols="30" rows="3"></textarea>
        </div>

        <button class="btn btn-sm btn-success">Submit</button>
      </form>

      <div>
        <% for( let review of product.reviews ) { %>
          <div class="card my-2">
            <div class="card-body">
              <p class="starability-result" data-rating="<%= review.rating %>">
                Rated: <%= review.rating %> stars
              </p>
              <p class="card-text">
                <%= review.comment %>
              </p>
              <a href="#" class="btn btn-sm btn-danger">Delete</a>
            </div>
          </div>
          <% } %>
      </div>

    </div>
  </div>